<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayScreen">

    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:text="@string/selectedDate"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <Button
        android:id="@+id/goBackButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="86dp"
        android:layout_height="51dp"
        android:onClick="goBack"
        android:text="@string/goBackButton"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />


    <TextView
        android:id="@+id/rateDayText"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:text="@string/rateDayText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedDate"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/socialTimeText"
        android:layout_width="161dp"
        android:layout_height="39dp"
        android:text="@string/socialTimeText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rateDayText"
        app:layout_constraintVertical_bias="0.061" />

    <Spinner
        android:id="@+id/activityRatingDropdown"
        android:layout_width="166dp"
        android:layout_height="42dp"
        android:entries="@array/ratingChoices"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/rateDayText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <EditText
        android:id="@+id/socialTimeTextBox"
        android:layout_width="158dp"
        android:layout_height="45dp"
        android:autofillHints="Hours"
        android:ems="10"
        android:hint="@string/SocialTimeAutofill"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toEndOf="@+id/socialTimeText"
        app:layout_constraintTop_toBottomOf="@+id/activityRatingDropdown"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/SleepTimeText"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:text="@string/SleepTimeText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socialTimeText"
        app:layout_constraintVertical_bias="0.044" />

    <EditText
        android:id="@+id/sleepTimeTextBox"
        android:layout_width="161dp"
        android:layout_height="48dp"
        android:autofillHints="Hours"
        android:ems="10"
        android:hint="@string/SocialTimeAutofill"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socialTimeTextBox"
        app:layout_constraintVertical_bias="0.043" />

    <CheckBox
        android:id="@+id/newexperienceBox"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:text="@string/newexperienceBoxText"
        app:layout_constraintEnd_toStartOf="@+id/exerciseBox"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SleepTimeText" />

    <CheckBox
        android:id="@+id/exerciseBox"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/exerciseBoxText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepTimeTextBox"
        app:layout_constraintVertical_bias="0.018" />

    <CheckBox
        android:id="@+id/newpeopleBox"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="@string/newpeopleBoxText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newexperienceBox"
        app:layout_constraintVertical_bias="0.041" />

    <Button
        android:id="@+id/goToActivityScreenButton"
        android:layout_width="193dp"
        android:layout_height="94dp"
        android:onClick="saveData"
        android:text="@string/goToActivityScreenButton"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941" />

</androidx.constraintlayout.widget.ConstraintLayout>