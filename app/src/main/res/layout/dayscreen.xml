<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayScreen">

    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="@string/selectedDate"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <Button
        android:id="@+id/goBackButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="86dp"
        android:layout_height="51dp"
        android:onClick="goBack"
        android:text="@string/goBackButton"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />


    <TextView
        android:id="@+id/rateDayText"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="@string/rateDayText"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedDate"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/socialTimeText"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="@string/socialTimeText"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rateDayText"
        app:layout_constraintVertical_bias="0.048" />

    <Spinner
        android:id="@+id/activityRatingDropdown"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:entries="@array/ratingChoices"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rateDayText"
        app:layout_constraintTop_toBottomOf="@+id/currentDateTextBox"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/socialTimeTextBox"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:autofillHints="Hours"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/SocialTimeAutofill"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/socialTimeText"
        app:layout_constraintTop_toBottomOf="@+id/activityRatingDropdown"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/SleepTimeText"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="@string/SleepTimeText"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socialTimeText"
        app:layout_constraintVertical_bias="0.043" />

    <EditText
        android:id="@+id/sleepTimeTextBox"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:autofillHints="Hours"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/SocialTimeAutofill"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SleepTimeText"
        app:layout_constraintTop_toBottomOf="@+id/socialTimeTextBox"
        app:layout_constraintVertical_bias="0.043" />

    <CheckBox
        android:id="@+id/newexperienceBox"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:text="@string/newexperienceBoxText"
        app:layout_constraintEnd_toStartOf="@+id/exerciseBox"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SleepTimeText" />

    <CheckBox
        android:id="@+id/exerciseBox"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/exerciseBoxText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepTimeTextBox"
        app:layout_constraintVertical_bias="0.018" />

    <CheckBox
        android:id="@+id/newpeopleBox"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="@string/newpeopleBoxText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newexperienceBox"
        app:layout_constraintVertical_bias="0.041" />

    <Button
        android:id="@+id/goToActivityScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="editActivity"
        android:text="@string/goToActivityScreenButton"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />

    <TextView
        android:id="@+id/currentDateTextBox"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toEndOf="@+id/selectedDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

</androidx.constraintlayout.widget.ConstraintLayout>